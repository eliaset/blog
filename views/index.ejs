<%- include("header.ejs") %>

<body>
  <%- include("navbar.ejs") %>
  <br />
  <div class="container">
    <h1>Daily Blog</h1>
    <p>
      Welcome to my personal blog! Here, I share thoughts, stories, and moments
      that inspire me. Feel free to explore and leave your feedback!
    </p>
    <h2 class="recent-posts-title">Recent Posts</h2>
    <% posts.forEach((element) => { %>
    <div class="container">
      <h3><%- element.title%></h3>
      <div class="post-container">
        <div class="post">
          <p><%= element.content %></p>
        </div>
        <a href="/<%= element.title %>" class="read-more">read more</a>
      </div>
      <br />
    </div>
    <% }) %>
  </div>
</body>

<%- include("footer.ejs") %>
